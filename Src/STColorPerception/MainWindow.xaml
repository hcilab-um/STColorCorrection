<Window x:Class="STColorPerception.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:perception="clr-namespace:STColorPerception"
        xmlns:data="clr-namespace:PerceptionLib;assembly=PerceptionLib"
        xmlns:hacks="clr-namespace:PerceptionLib.Hacks;assembly=PerceptionLib"
        Title="See-Through Color Perception - Experiment 1: Background Color Capture" Height="820" Width="1109" Loaded="Window_Loaded">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="314*" />
      <RowDefinition Height="467*" />
    </Grid.RowDefinitions>
    <StackPanel Orientation="Horizontal" Grid.RowSpan="2">
      <StackPanel Orientation="Vertical">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
          <StackPanel Orientation="Vertical">
            <Label>Color To Show</Label>
            <Rectangle Name="Rectangle_shown" Width="50" Height="50" Fill="Blue" Stroke="White"/>
            <Label>{L,u,v} - {RGB}</Label>
          </StackPanel>
          <StackPanel Orientation="Vertical">
            <Label>Color Captured</Label>
            <Rectangle Name="Rectangle_Captured" Width="50" Height="50" Fill="Red" Stroke="Black"/>
            <Label>{L,u,v} - {RGB}</Label>
          </StackPanel>
        </StackPanel>
        <perception:CIE1976Control x:Name="cie1976C" VerticalAlignment="Top" HorizontalAlignment="Left" Height="400" Width="400"
                               DataContext="{StaticResource ResourceKey=mpcColors}"/>
        <StackPanel Orientation="Vertical" Margin="5,0,0,0" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="392" Height="276">
           
          <Image Name="Image_Camera" Stretch="Fill" Width="251" Height="143" Margin="10,10,10,10" />
          <Image Height="87" Name="Image_Croped" Stretch="Fill" Width="140" Margin="10,5,10,10" />
        </StackPanel>
      </StackPanel>
      <StackPanel Orientation="Vertical" Margin="5,0,0,0" Width="680" Height="749">
        <Label>Color List</Label>
        <DataGrid Name="dtgrid_corrDisplay" Width="680" Height="523">Corrdinates</DataGrid>
        <StackPanel Orientation="Horizontal" Width="635" Height="26" Margin="10,20,10,10 ">  
          <Button Width="81" Click="Button_Click" Name="Btn_Load_File" Margin="10,0,0,0">Load</Button>
          <Button Width="84" Name="Btn_StartMeasurment" Margin="10,0,0,0" Click="Btn_StartMeasurment_Click">Start capture</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Width="635" Height="46" Margin="10,10,10,10 ">
          <Label Name="lbl_R" Width="19" Height="26" Margin="10,10,0,0">R:</Label>
          <TextBox Name="txt_R" Width="43" Height="24" Margin="0,10,0,0">225</TextBox>
          <Label Name="lbl_G" Width="19" Height="26" Margin="10,10,0,0">G:</Label>
          <TextBox Name="txt_G" Width="43" Height="24" Margin="0,10,0,0">0</TextBox>
          <Label Name="lbl_B" Width="19" Height="26" Margin="10,10,0,0">B:</Label>
          <TextBox Name="txt_B" Width="43" Height="24" Margin="0,10,0,0">0</TextBox>
          <Label Name="lbl_m" Width="64" Height="26" Margin="50,10,0,0">Measured</Label>
          <Label Name="lbl_MR" Width="50" Height="26" Margin="10,10,0,0">R:</Label>
          <Label Name="lbl_MG" Width="50" Height="26" Margin="10,10,0,0">G:</Label>
          <Label Name="lbl_MB" Width="50" Height="26" Margin="10,10,0,0">B:</Label>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Width="635" Height="46" Margin="10,10,10,10 ">
          <Label Name="lbl_L" Width="50" Height="26" Margin="10,10,0,0">L:</Label>
          <Label Name="lbl_U" Width="50" Height="26" Margin="10,10,0,0">U*:</Label>
          <Label Name="lbl_V" Width="50" Height="26" Margin="10,10,0,0">V*:</Label>
          <Label Name="lbl_mluv" Width="64" Height="26" Margin="50,10,0,0">Measured</Label>
          <Label Name="lbl_ML" Width="50" Height="26" Margin="10,10,0,0">L:</Label>
          <Label Name="lbl_MU" Width="50" Height="26" Margin="10,10,0,0">U*:</Label>
          <Label Name="lbl_MV" Width="50" Height="26" Margin="10,10,0,0">V*:</Label>
        </StackPanel>
      </StackPanel>
       
     </StackPanel>
    
    

  </Grid>
</Window>
