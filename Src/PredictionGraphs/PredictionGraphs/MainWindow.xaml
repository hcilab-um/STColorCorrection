        <controls:ColumnColor Width="20" TestBg="#f4f3ee" Margin="0,0,1,0" Model="{Binding ElementName=cbModel, Path=SelectedItem.Tag}" BgType="{Binding ElementName=cbBgType, Path=SelectedItem.Tag}" DataContext="{Binding ElementName=mainW, Path=DisplayData}" MaxValue="100"/>
