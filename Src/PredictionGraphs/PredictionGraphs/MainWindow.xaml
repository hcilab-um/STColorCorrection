<Window x:Class="PredictionGraphs.MainWindow" x:Name="mainW"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:PredictionGraphs"
        Title="MainWindow" Height="355" Width="527">

  <Grid>
    <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
      <TextBox x:Name="tbFileName" Width="282"/>
      <Button Content="Select" Click="Button_Click" />
      <ComboBox x:Name="cbModel" SelectionChanged="cbModel_SelectionChanged">
        <ComboBoxItem IsSelected="True" Tag="DM">Direct Model</ComboBoxItem>
        <ComboBoxItem Tag="CAT1">CAT 1</ComboBoxItem>
        <ComboBoxItem Tag="CAT2">CAT 2</ComboBoxItem>
        <ComboBoxItem Tag="CAT3">CAT 3</ComboBoxItem>
        <ComboBoxItem Tag="BP">Binned Profile</ComboBoxItem>
      </ComboBox>
      <ComboBox x:Name="cbBgType" SelectionChanged="cbBgType_SelectionChanged">
        <ComboBoxItem IsSelected="True" Tag="TD">Through DP</ComboBoxItem>
        <ComboBoxItem Tag="ND">Before DP</ComboBoxItem>
      </ComboBox>
    </StackPanel>
    <Grid Margin="0,25,0,1">
      <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Center">
        <controls:ColumnColor Width="20" TestBg="#39469e" Margin="0,0,1,0" Model="{Binding ElementName=cbModel, Path=SelectedItem.Tag}" BgType="{Binding ElementName=cbBgType, Path=SelectedItem.Tag}" DataContext="{Binding ElementName=mainW, Path=DisplayData}" MaxValue="100"/> <!-- 01 - macberth color chart -->
        <controls:ColumnColor Width="20" TestBg="#3d3c3d" Margin="0,0,1,0" Model="{Binding ElementName=cbModel, Path=SelectedItem.Tag}" BgType="{Binding ElementName=cbBgType, Path=SelectedItem.Tag}" DataContext="{Binding ElementName=mainW, Path=DisplayData}" MaxValue="100"/>
        <controls:ColumnColor Width="20" TestBg="#519b4f" Margin="0,0,1,0" Model="{Binding ElementName=cbModel, Path=SelectedItem.Tag}" BgType="{Binding ElementName=cbBgType, Path=SelectedItem.Tag}" DataContext="{Binding ElementName=mainW, Path=DisplayData}" MaxValue="100"/>
        <controls:ColumnColor Width="20" TestBg="#5264aa" Margin="0,0,1,0" Model="{Binding ElementName=cbModel, Path=SelectedItem.Tag}" BgType="{Binding ElementName=cbBgType, Path=SelectedItem.Tag}" DataContext="{Binding ElementName=mainW, Path=DisplayData}" MaxValue="100"/>
        <controls:ColumnColor Width="20" TestBg="#5c5c5c" Margin="0,0,1,0" Model="{Binding ElementName=cbModel, Path=SelectedItem.Tag}" BgType="{Binding ElementName=cbBgType, Path=SelectedItem.Tag}" DataContext="{Binding ElementName=mainW, Path=DisplayData}" MaxValue="100"/>
        <controls:ColumnColor Width="20" TestBg="#61744b" Margin="0,0,1,0" Model="{Binding ElementName=cbModel, Path=SelectedItem.Tag}" BgType="{Binding ElementName=cbBgType, Path=SelectedItem.Tag}" DataContext="{Binding ElementName=mainW, Path=DisplayData}" MaxValue="100"/>
        <controls:ColumnColor Width="20" TestBg="#644573" Margin="0,0,1,0" Model="{Binding ElementName=cbModel, Path=SelectedItem.Tag}" BgType="{Binding ElementName=cbBgType, Path=SelectedItem.Tag}" DataContext="{Binding ElementName=mainW, Path=DisplayData}" MaxValue="100"/>
        <controls:ColumnColor Width="20" TestBg="#6682a1" Margin="0,0,1,0" Model="{Binding ElementName=cbModel, Path=SelectedItem.Tag}" BgType="{Binding ElementName=cbBgType, Path=SelectedItem.Tag}" DataContext="{Binding ElementName=mainW, Path=DisplayData}" MaxValue="100"/>
        <controls:ColumnColor Width="20" TestBg="#6cc1af" Margin="0,0,1,0" Model="{Binding ElementName=cbModel, Path=SelectedItem.Tag}" BgType="{Binding ElementName=cbBgType, Path=SelectedItem.Tag}" DataContext="{Binding ElementName=mainW, Path=DisplayData}" MaxValue="100"/>
