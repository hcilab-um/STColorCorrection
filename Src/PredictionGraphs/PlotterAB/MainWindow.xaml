<Window x:Class="PlotterAB.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" SizeToContent="WidthAndHeight">
  <StackPanel Orientation="Vertical">
    <StackPanel Orientation="Horizontal">
      <TextBox x:Name="tbFileName" Width="282"/>
      <Button Content="Select" Margin="10,0" Click="Button_Click" />
    </StackPanel>
    <Grid  Height="900" Width="900">
      <Image Source="Image/LAB.png" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"></Image>
      <Canvas Name="cvHeatMap" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
    </Grid>
  </StackPanel>
</Window>
